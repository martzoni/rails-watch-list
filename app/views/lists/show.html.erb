<h1><%= @list.name %></h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Comment</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @list.bookmarks.each do |bookmark|%>  
    <tr>
      <th scope="row"><%= bookmark.id %></th>
      <td><%= bookmark.movie.title %></td>
      <td><%= bookmark.comment %></td>
      <td><%= link_to "❌", bookmark_path(bookmark.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New bookmark', new_list_bookmark_path(@list), class: "btn btn-primary" %>